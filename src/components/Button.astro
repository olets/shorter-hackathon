---
import Heading from "../components/Heading.astro";
import DynamicBox from "../components/DynamicBox.astro";
---

<!--
  for UnoCSS
    class="{display:inline-block} {padding:.8rem_1.5rem} {--width-fancy-corners:0.625rem} {--DynamicBox-color-background:color-mix(in_srgb,currentColor_20%,transparent)} :focus{--DynamicBox-color-background:transparent} :hover{--DynamicBox-color-background:transparent} :focus-visible{--color-border:var(--color-accent)} :hover{--color-border:var(--color-accent)} {--DynamicBox-corner-width:0.625rem}"
-->

<DynamicBox
  class="{display:inline-block} {padding:.8rem_1.5rem} {--width-fancy-corners:0.625rem} {--DynamicBox-color-background:color-mix(in_srgb,currentColor_20%,transparent)} :focus{--DynamicBox-color-background:transparent} :hover{--DynamicBox-color-background:transparent} :focus-visible{--color-border:var(--color-accent)} :hover{--color-border:var(--color-accent)} {--DynamicBox-corner-width:0.625rem}"
>
  <Heading is="span" size="small">
    <slot />
  </Heading>
</DynamicBox>
