---
import Heading from "../components/Heading.astro";
import DynamicBox from "../components/DynamicBox.astro";
---

<!--
  for UnoCSS
    class="{display:inline-block} {padding:.8rem_1.5rem} {--DynamicBox-corner-width:10px} :focus-visible{--DynamicBox-color-background:color-mix(in_srgb,_var(--color-foreground)_20%,transparent)} :focus-visible{--color-border:var(--color-accent)} :hover{--color-border:var(--color-accent)},transparent)} :hover{--DynamicBox-color-background:color-mix(in_srgb,_var(--color-foreground)_20%,transparent)}"
-->

<DynamicBox
  class="{display:inline-block} {padding:.8rem_1.5rem} {--DynamicBox-corner-width:10px} :focus-visible{--DynamicBox-color-background:color-mix(in_srgb,_var(--color-foreground)_20%,transparent)} :focus-visible{--color-border:var(--color-accent)} :hover{--color-border:var(--color-accent)},transparent)} :hover{--DynamicBox-color-background:color-mix(in_srgb,_var(--color-foreground)_20%,transparent)}"
>
  <Heading is="span" size="small">
    <slot />
  </Heading>
</DynamicBox>
